<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card2"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/courses_card_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/economica"
            android:gravity="center"
            android:text="COMP415"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/courses_card_semester_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courses_card_title_text"
            android:fontFamily="@font/antic"
            android:gravity="center"
            android:text="SPRING2020"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/courses_card_instructor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courses_card_semester_name"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/antic"
            android:gravity="center"
            android:text="Melike Mellow"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/courses_card_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courses_card_instructor_name"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/antic"
            android:gravity="center"
            android:text="14:30 - 15:45"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
        android:id="@+id/courses_card_classroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/courses_card_time"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/antic"
        android:gravity="center"
        android:text="ENGZ20"
        android:textColor="@color/black"
        android:textSize="12sp" />

        <TextView
            android:id="@+id/courses_card_grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/courses_card_classroom"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/antic"
            android:text="@string/currentGrade"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/courses_card_grade_predicted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courses_card_classroom"
            android:layout_toRightOf="@id/courses_card_grade_text"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/antic"
            android:layout_marginLeft="10dp"
            android:text="A+"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>