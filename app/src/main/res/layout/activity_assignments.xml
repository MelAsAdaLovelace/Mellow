<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/home_background"
    tools:context=".Assignments">

    <RelativeLayout
        android:id="@+id/ass_header_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/backgroundYellow"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assignments_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_chevron_left"
            android:fontFamily="@font/antic"
            android:gravity="center"
            android:onClick="goToDashboard"
            android:text="@string/home"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ass_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assignments"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:fontFamily="@font/economica"
            android:textColor="@color/japanese_indigo"
            android:layout_below="@id/assignments_back"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ass_page_title"
            android:background="@color/japanese_indigo"
            android:layout_gravity="bottom"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/ass_recycler"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>